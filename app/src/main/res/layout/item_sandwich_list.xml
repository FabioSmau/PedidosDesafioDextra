<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sandwichDescription"
            type="com.desafio.dextra.sandwichlist.recyclerview.SandwichDescription" />
    </data>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="21dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="0"
                android:id="@+id/imagePhoto"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@{sandwichDescription.urlImage}"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@{sandwichDescription.name}"
                    tools:text="Teste" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{sandwichDescription.price}"
                    tools:text="Teste" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{sandwichDescription.ingredients}"
                    tools:text="Teste" />


            </LinearLayout>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>


</layout>